<TwoPlayerScreen>
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 61/256, 105/256, 153/256, 0.5

        # Topbar
        MDTopAppBar:
            title: "Anime auswählen"
            md_bg_color: 61/256, 105/256, 153/256, 1
            elevation: 0
            size_hint_y: None
            height: dp(56)
            left_action_items: [["arrow-left", lambda x: root.on_back_pressed()]]  # Linker Zurück-Button
            right_action_items: [["magnify", lambda x: root.search()]]  # Rechter Such-Button

        ScrollView:
            id: anime_scroll_view
            do_scroll_x: False
            do_scroll_y: True
            size_hint_y: 1   # Nimmt den gesamten Platz unter der TopAppBar ein
            size_hint_x: 1

            MDBoxLayout:
                id: anime_list
                orientation: 'vertical'
                padding: dp(12)
                spacing: dp(12)
                size_hint_y: None
                height: self.minimum_height  # ScrollView weiß, wie groß das Grid ist

