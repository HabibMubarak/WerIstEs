<HomeScreen>:
    FloatLayout:
        # Hintergrundbild
        FitImage:
            source: "app/assets/img/intro.png"
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            allow_stretch: True
            keep_ratio: False
            # Damit das Bild ganz hinten liegt
            z: 0
        MDRaisedButton:
            text: "Start"
            md_bg_color: 61/256, 145/256, 190/256, 1
            text_color: 1, 1, 1, 1
            elevation: 2
            size_hint: 0.3, None       # 40% Breite, 8% HÃ¶he
            font_name: 'TitanOne-Regular'
            font_size: "20sp"
            pos_hint: {"center_x": 0.5, "y": 0.1}  # 10% vom unteren Rand
            on_press: 
                root.go_to_name()