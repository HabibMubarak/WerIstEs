<HomeScreen>:
    FloatLayout:
        # Hintergrundbild
        FitImage:
            source: "app/assets/img/intro.png"
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            allow_stretch: True
            keep_ratio: False
            # Damit das Bild ganz hinten liegt
            z: 0
        MDFillRoundFlatButton:
            text: "Start"
            md_bg_color: 61/256, 105/256, 153/256, 1
            text_color: 1, 1, 1, 1
            size_hint: 0.4, 0.08       # 40% Breite, 8% HÃ¶he
            pos_hint: {"center_x": 0.5, "y": 0.1}  # 10% vom unteren Rand
            on_press: root.go_to_chat()