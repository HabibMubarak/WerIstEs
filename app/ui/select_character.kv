<SelectCharacter>
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 61/256, 105/256, 153/256, 0.5

        MDTopAppBar:
            id: select_anime_top_bar
            title: root.selected_anime
            md_bg_color: 61/256, 105/256, 153/256, 1
            elevation: 0
            size_hint_y: None
            height: dp(56)
            left_action_items: [["arrow-left", lambda x: root.on_back_pressed()]]
        MDBoxLayout:
            size_hint: 1, 1
            md_bg_color: 61/256, 105/256, 153/256, 1
            MDCarousel:
                id: carousel
                direction: "right"
                size_hint: 1, 0.8
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                loop: False
                