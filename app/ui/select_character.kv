<SelectCharacter>
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 61/256, 105/256, 153/256, 0.5

        MDTopAppBar:
            id: select_anime_top_bar
            title: root.selected_anime
            md_bg_color: 61/256, 105/256, 153/256, 1
            elevation: 0
            size_hint_y: None
            height: dp(56)
            left_action_items: [["arrow-left", lambda x: root.on_back_pressed()]]

        FloatLayout:
            RecycleView:
                id: rv
                viewclass: "GameCard"
                scroll_type: ['content','bars']
                do_scroll_x: True
                do_scroll_y: False
                bar_width: dp(8)                       # Breite der Scrollbar
                bar_color: 1, 0, 0, 1                  # Rot, alpha=1

                RecycleBoxLayout:
                    default_size: None, None
                    default_size_hint: None, None
                    size_hint_x: None
                    height: self.minimum_height
                    width: self.minimum_width
                    orientation: 'horizontal'
                    spacing: dp(10)
