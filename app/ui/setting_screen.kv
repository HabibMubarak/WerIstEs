<SettingScreen>:
    name: "settings"

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 61/256, 105/256, 153/256, 0.5
        MDTopAppBar:
            title: root.setting
            md_bg_color: 61/256, 105/256, 153/256, 1
            elevation: 0
            size_hint_y: None
            height: dp(56)
            left_action_items: [["arrow-left", lambda x: root.on_back_pressed()]]
            right_action_items: [["", lambda x: None]]  # unsichtbares Icon

        ScrollView:
            MDList:
                id: settings_list

                # Hintergrundmusik-Umschalter
                OneLineAvatarIconListItem:
                    text: "Musik"
                    IconLeftWidget:
                        icon: "music"
                    IconRightWidget:
                        icon: "volume-off" if app.muted else "volume-high"
                        on_release:
                            app.toggle_mute()
                            self.icon = "volume-off" if app.muted else "volume-high"

                # Abspielen im Hintergrund erlauben
                OneLineAvatarIconListItem:
                    text: "Im Hintergrund weiter abspielen"
                    IconLeftWidget:
                        icon: "repeat"
                    RightSwitch:
                        active: app.play_in_background
                        on_active: app.set_play_in_background(self.active)
